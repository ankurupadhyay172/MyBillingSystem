<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:id="@+id/otp"
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_marginTop="11.7dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:text="Enter OTP"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:textColor="#454545"
                        android:textSize="16sp" />



                    <TextView
                        android:id="@+id/sendotp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="3dp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/login_signupbtn_ract"
                        android:gravity="center"
                        android:paddingBottom="15sp"
                        android:paddingTop="15dp"
                        android:text="Submit Otp"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="15sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/register"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="25.2dp"
                        android:orientation="vertical">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Name"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:inputType="textCapWords"
                            android:id="@+id/name"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/phone_no_ract"
                            android:hint="Enter name"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingBottom="14.7dp"
                            android:paddingLeft="11.7dp"
                            android:paddingTop="14.7dp"
                            android:textColor="#8d8d8d"
                            android:textSize="15sp" />


                        <TextView
                            android:layout_marginTop="11.7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Business Name"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:inputType="textEmailAddress"
                            android:id="@+id/businessName"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/phone_no_ract"
                            android:hint="Business Name"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingBottom="14.7dp"
                            android:paddingLeft="11.7dp"
                            android:paddingTop="14.7dp"
                            android:textColor="#8d8d8d"
                            android:textSize="15sp" />


                        <TextView
                            android:layout_marginTop="11.7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Business Address"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:inputType="textEmailAddress"
                            android:id="@+id/businessAddress"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/phone_no_ract"
                            android:hint="Business Address"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingBottom="14.7dp"
                            android:paddingLeft="11.7dp"
                            android:paddingTop="14.7dp"
                            android:textColor="#8d8d8d"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_marginTop="11.7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Email Address"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:inputType="textEmailAddress"
                            android:id="@+id/email_address"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/phone_no_ract"
                            android:hint="Enter E-mail Address"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingBottom="14.7dp"
                            android:paddingLeft="11.7dp"
                            android:paddingTop="14.7dp"
                            android:textColor="#8d8d8d"
                            android:textSize="15sp" />
                        <TextView
                            android:layout_marginTop="11.7dp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:text="Mobile No."
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:focusable="false"
                            android:id="@+id/mobile_no"
                            android:inputType="number"
                            android:maxLength="10"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/phone_no_ract"
                            android:hint="Mobile No."
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:paddingBottom="14.7dp"
                            android:paddingLeft="11.7dp"
                            android:paddingTop="14.7dp"
                            android:textColor="#8d8d8d"
                            android:textSize="15sp" />


                        <ProgressBar
                            android:visibility="gone"
                            android:id="@+id/progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/submit"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="40dp"
                            android:background="@drawable/login_signupbtn_ract"
                            android:gravity="center"
                            android:paddingBottom="15sp"
                            android:paddingTop="15dp"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="15sp" />


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>
</layout>