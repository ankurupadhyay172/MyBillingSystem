<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.7dp"
        android:layout_marginEnd="16.7dp"
        android:layout_marginBottom="16.7dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6.7dp">

        <LinearLayout
            android:id="@+id/liOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:background="@color/white"
            android:paddingEnd="11.7dp"
            android:paddingBottom="15dp">

            <FrameLayout
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/rect_gray_cure_border">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="21.3dp"
                    android:layout_height="21.3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/pendingorder" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/liData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black_25303c"
                        android:fontFamily="@font/sf_pro_display_medium"
                        android:includeFontPadding="false" />


                    <TextView
                        android:id="@+id/price"
                        android:textColor="@color/myblue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more" />
                </LinearLayout>

                <TextView
                    android:id="@+id/user_detail"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8.7dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_828990"
                    android:fontFamily="@font/sf_pro_display_regular"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/liData"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="8.7dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_828990"
                    android:fontFamily="@font/sf_pro_display_regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/liData"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:includeFontPadding="false"
                    android:textSize="14sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>