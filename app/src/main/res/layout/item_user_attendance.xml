<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.billing.mybilling.data.model.response.Users" />

    </data>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16.7dp"
        android:layout_marginEnd="16.7dp"
        android:layout_marginBottom="16.7dp"
        android:padding="@dimen/_12sdp"
        app:cardCornerRadius="10dp"
        app:cardElevation="6.7dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/_5sdp">

            <FrameLayout
                android:id="@+id/imgFrame"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/rect_gray_cure_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="21.3dp"
                    android:layout_height="21.3dp"
                    android:layout_gravity="center"
                    android:src="@drawable/usericon" />
            </FrameLayout>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black_25303c"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/imgFrame"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:includeFontPadding="false"
                android:textColor="@color/appcolor"
                android:text="@{user.user_id}"
                android:textSize="15sp"

                app:layout_constraintStart_toStartOf="@+id/user_name"
                app:layout_constraintTop_toBottomOf="@+id/user_name" />


            <TextView
                android:id="@+id/spendHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"

                android:layout_marginTop="@dimen/_12sdp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:includeFontPadding="false"
                android:textColor="@color/black_25303c"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/liTapIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/root_gray"
                android:orientation="horizontal"
                android:background="@drawable/rect_gray_cure_border"
                android:paddingLeft="17dp"
                android:layout_marginTop="@dimen/_12sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="13dp"
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/liTapOut"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgFrame">

                <TextView
                    android:id="@+id/tvTapIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:gravity="center"
                    android:text="    Tap In    "
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/liTapOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_cure_border"
                android:backgroundTint="@color/root_gray"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="13dp"
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/liLeave"
                app:layout_constraintStart_toEndOf="@+id/liTapIn"
                tools:layout_editor_absoluteX="133dp">

                <TextView
                    android:id="@+id/tvTapOut"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:gravity="center"
                    android:text="   Tap Out    "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/liLeave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rect_gray_cure_border"
                android:backgroundTint="@color/root_gray"
                android:orientation="horizontal"
                android:paddingLeft="17dp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="13dp"
                android:paddingBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/liTapOut">

                <TextView
                    android:id="@+id/tvLeave"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/sf_pro_display_semibold"
                    android:gravity="center"
                    android:text="    Leave    "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>
</layout>